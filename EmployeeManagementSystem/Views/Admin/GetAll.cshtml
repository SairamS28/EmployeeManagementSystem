@model IEnumerable<EmployeeManagementSystem.Models.Employee>

<!DOCTYPE html>

<html lang="en">


<body>
    <div class="d-flex flex-row justify-content-between" >
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <p>
            <a asp-action="SignOut">Logout</a>
        </p>
    </div>
    <div class="m-4">

        <table class="table table-hover h-75">

            <thead>

                <tr class="table-primary">
                    <th>@Html.DisplayNameFor(model=>model.Empid)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Department)</th>
                    <th>@Html.DisplayNameFor(model=>model.Email)</th>
                    <th>@Html.DisplayNameFor(model=>model.Manager)</th>
                    <th>Options</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelitem=>item.Empid)</td>
                        <td>@Html.DisplayFor(modelitem=>item.Name)</td>
                        <td>@Html.DisplayFor(modelitem=>item.Department.Name)</td>
                        <td>@Html.DisplayFor(modelitem=>item.Email)</td>
                        <td>@Html.DisplayFor(modelitem=>item.Manager.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Empid">Edit</a> |
                            <a asp-action="GetById" asp-route-id="@item.Empid">Details</a> |
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

</body>

</html>