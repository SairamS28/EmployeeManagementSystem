        <nav class="navbar navbar-expand-lg mx-2 mb-2" style="background-color:rgba(0, 0, 0, 0.2);">
            <div class="container-fluid ">
               
                <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                       @if (User.Identity.IsAuthenticated)
                        {
                           @if(User.IsInRole("Admin")){
                               <li class="nav-item mx-4">
                                   <a class="nav-link" asp-action="Getall" asp-controller="admin" asp-area="">Employee</a>
                               </li>
                               <li class="nav-item mx-4">
                                   <a class="nav-link" asp-action="Display" asp-controller="Department" asp-area="">Department</a>
                               </li>
                           }
                        }else{
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-action="Index" asp-controller="Home" asp-area="">Home</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-action="Contactus" asp-area="" asp-controller="Home">Contact</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="login">Admin Login</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="register">Sign Up</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="login">Employee Login</a>
                        </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
