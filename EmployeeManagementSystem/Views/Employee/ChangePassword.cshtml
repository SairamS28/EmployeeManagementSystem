@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "ChangePassword";
}


<div class="row">
    <div class="mask d-flex align-items-center h-75 gradient-custom-3">
        <div class="container my-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-5 my-5">
        <form asp-action="ChangePassword">
                        <h2 class="text-uppercase text-center mb-5">Update Password</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empid" />
            
            <div class="form-group">
                <label>Old Password</label>
                <input name="oldpassword" type="password" class="form-control" />
                
            </div>
            <div class="form-group">
                <label>New Password</label>
                            <input asp-for="Password" name="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
                        <div class="form-group text-center">
                        <input type="submit" value="change Password" class="btn btn-secondary" />
                        </div>
        </form>
    </div>
    </div>
    </div>
    </div>
</div>



